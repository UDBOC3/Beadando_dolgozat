class IntigerNum:
    'ide jön az osztály szintű adattag'

    def __init__(self, p1):
        self.number = p1

    def pow(self, k):
        return self.number**k

    def square(self):
        return self.number**2

    def double(self):
        return self.number*2

    def abs(self):
        if self.number>0:
            return self.number
        elif self.number<0:
            return -self.number
        else:
            return 0




class Circle:
    'osztály szintű adattag'
    pi=3.14

    def __init__(self, r):
        self.radius=r
        self.tmp='valami'
        self.diameter=2*r

    def __str__(self):
        return 'This circle has radius: {}'.format(self.radius)

c1=Circle(5)
print(c1)
print(c1.area())
print(c1.perimeter())
