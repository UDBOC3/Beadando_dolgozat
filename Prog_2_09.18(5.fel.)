import numpy as np

class SzumNull:

    def __init__(self,a):
        self.a=a

    def osszeg(self):
        b = np.array = []
        for i in range(len(self.a)):
            for j in range(i+1):
                for k in range(j+1):
                    if self.a[i]+self.a[j]+self.a[k]==0:
                        b.append(self.a[i])
                        b.append(self.a[j])
                        b.append(self.a[k])
        return b

def main():
    a = np.array = [-25, -10, -7, -3, 2, 4, 8, 10]
    x=SzumNull(a)
    print(x.osszeg())
main()
