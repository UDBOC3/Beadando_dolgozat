3.gyak.:

class Triangle:

    def __init__(self, p1, p2, p3=0):
        if p3==0:
            self.a=p1
            self.h=p2
        else:
            self.a=p1
            self.b=p2
            self.c=p3

    def area(self):
        if hasattr(self, 'c'):
            s=(self.a+self.b+self.c)/2
            area=(s*(s-self.a)*(s-self.b)*(s-self.c))**0.5
            return area
        else:
            return (self.a*self.h)/2

    def perimeter(self):
        if hasattr(self, 'c'):
            return self.a+self.b+self.c
        else:
            return('Csak 2 adat van megvadva.')

    def __str__(self):
        if hasattr(self, 'c'):
            return 'A haromszog oldalai: {},{},{}'.format(self.a,self.b,self.c)
        else:
            return 'Magassag: {}, Alap: {}'.format(self.h, self.a)

    def __add__(self, other):
        if isinstance(other, Triangle):
            return self.area()+other.area()
        if isinstance(other, int) or isinstance(other, float):
            return self.area()+other

    def __radd__(self, other):
        return self.__add__(other)

    def __sub__(self, other):
        if isinstance(other, Triangle):
            return self.area()-other.area()

        if isinstance(other, int) or isinstance(other, float):
            return self.area()-other

    def __eq__(self, other):
        return self.area()==other.area()

    def __ne__(self, other):
        return self.area()!=other.area()

    def __gt__(self, other):
        return self.area()>other.area()

    def __le__(self,other):
        return self.area()<=other.area()
        
class Vektor:
    origoX = 0
    origoy = 0

    def __init__(self, p1, p2):
        self.X = p1
        self.Y = p2

    def __str__(self):
        return '<{},{}>'.format(self.X, self.Y)

    def __iadd__(self, other):
        if isinstance(other, Vektor):
            x = self.X + other.X
            y = self.Y + other.Y

        if isinstance(other, int) or isinstance(other, float):
            x = self.X + other
            y = self.Y + other

        self.X = x
        self.Y = y

        return self
        
import math
class ComplexNumber:

    def __init__(self, real, imag):
        self.real = real
        self.imag = imag

    def __str__(self):
        return "({}+{})".format(self.real,self.imag)

    def conjugate(self):
        return self.__class__(self.real, -self.imag)

    def argz(self):
        return math.atan(self.imag / self.real)


def main():
    t1=Triangle(3,4,5)
    print(t1)
    print(t1.area())
    print(t1.perimeter())
    t2=Triangle(4,6)
    print(t2)
    print(t2.area())
    print("__add__: ", t1+t2, t1+3, t1+3.2)
   
   
    v1=Vektor(5,6)
    print(v1)
    v2=Vektor(4,3)
    v1+=v2
    print(v1)
    
    
    n=ComplexNumber(4.4,3.2)
    print(n)
    print(n.conjugate())
    print(n.argz())
main()

