"2.gyak."

class IntegerNum:

    def __init__(self, p1):
        self.number=p1

    def doubleNum(self):
        return self.number*2

    def squareNum(self):
        return self.number**2

    def pow(self,k):
        return self.number**k

    def abs(self):
        if self.number<0:
            return self.number*-1
        if self.number>0:
            return self.number
        else:
            return 0
            
class Circle:
    pi=3.14

    def __init__(self,r ):
        self.radius=IntegerNum(r)
        self.name='Kor'
        self.diameter=IntegerNum(2*r)

    def __str__(self):
        return "Ez a kor sugara: {} a terulete: {}".format(self.radius.number, self.getArea())

    def getArea(self):
        return self.radius.squareNum()*self.pi

    def getPerimeter(self):
        return 2*self.pi*self.radius.number    
        
        
class MyString:

    def __init__(self):
        self.str=""

    def getString(self):
        self.str=input("Adj meg egy szring sorozatot!: ")

    def printString(self):
        print(self.str.upper())
        
        
def main():
    num=IntegerNum(7)
    print(num.pow(8))
    print(num.abs())
    print(num.doubleNum())
    print(num.squareNum())
    
    
    kor=Circle(5)
    print(kor.getArea())
    print(kor.getPerimeter())
    print(kor)
    
    str=MyString()
    str.getString()
    str.printString()
main()

